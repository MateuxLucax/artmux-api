{
    "compilerOptions": {
        "target": "es6",   
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./src/@types",
            "./custom_typings",
            "./@types",
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "swc": true
    }
}